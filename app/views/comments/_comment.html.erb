<p><%= comment.content %></p>
<p><small>Posted by <%= comment.user.email %> <%= time_ago_in_words(comment.created_at) %> ago</small></p>

<% if user_signed_in? %>
  <% if comment.user_id == current_user.id %>
    <%= link_to "Edit", edit_advert_comment_path(comment.advert, comment) %>
    <%= link_to "Delete", advert_comment_path(comment.advert, comment), method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
<% end %>
